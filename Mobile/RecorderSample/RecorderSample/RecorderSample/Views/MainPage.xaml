<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RecorderSample"
             Title="Recorder Sample"
             x:Class="RecorderSample.MainPage">

    <ContentPage.BindingContext>
        <local:MainViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout>
            <Button Text="Audio Recorder" Command="{Binding AudioRecorderCommand}"/>

            <Button Text="Video Recorder" Command="{Binding VideoRecorderCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>